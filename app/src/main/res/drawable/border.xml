<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define border color and width -->
    <stroke
        android:width="2dp"
        android:color="#FF6200EE" /> <!-- You can change the color as needed -->

    <!-- Define corner radius for rounded edges -->
    <corners
        android:radius="10dp" /> <!-- Adjust this value for more or less rounded corners -->

    <!-- Optionally, set a background color for the shape -->
    <solid android:color="#FFFFFF"/> <!-- White background, you can change it -->

</shape>
